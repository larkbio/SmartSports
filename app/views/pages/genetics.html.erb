<input id="popup-messages" value="<%= @values %>" type="hidden"/>

<div class="genetics-block mainContent" id="genetics-container">
  <input id="genetics_header_values" value="<%=t :genetics_header_values%>" type="hidden" />
  <div class="sectionTitle geneticsBodyLogo geneticsColor">
    <%= t 'genetics' %>
  </div>
  <div class="contentBg">
    <div class="p10">
      <%= render "forms/element", locals: {:showButton => true,
                                           :elementName => 'genetics_personal_history',
                                           :style => 'geneticsStyle',
                                           :title => 'personal_history',
                                           :img => 'doctor_40.png',
                                           :elementId => 'personal-history-create-form',
                                           :resource => 'personal_records'
      } %>

      <%= render "forms/element", locals: {:showButton => true,
                                           :elementName => 'genetics_family_history',
                                           :style => 'geneticsStyle',
                                           :title => 'family_history',
                                           :img => 'family40.png',
                                           :elementId => 'family-history-create-form',
                                           :resource => 'family_records'
      } %>

      <div class="clearBoth"></div>
    </div>
  </div>

  <div class="sectionTitle geneticsBodyLogo geneticsColor" style="margin-top: 40px;">
    <span><%= t 'history_link' %></span>
    <span id="genetics-show-table" class="right"><i class="fa fa-table page-control"></i></span>
  </div>

  <table class="historyTable" cellpadding="0" cellspacing="0">
    <tbody id="recentResourcesTable">
    </tbody>
  </table>

</div>

<div id="openModalGenetics" class="modalDialog">
  <div>
    <div class="table-toolbar">
      <span id="close-genetics-data" class="right page-control modalClose"><i class="fa fa-times fa-2x"></i></span>
      <span id="download-genetics-data" class="right page-control"><i class="fa fa-download fa-2x"></i></span>
    </div>
    <br/>
    <br/>
    <div id="genetics-data-container">
      <table id="genetics-data" class="display" cellspacing="0" width="100%"></table>
    </div>
  </div>
</div>

<script>
    pages_menu();
    genetics_loaded();
</script>
<% content_for :menu do %>
    <%= render "menu" %>
<% end %>
<% content_for :mobile_menu do %>
    <%= render "mobile_menu" %>
<% end %>
<% content_for :title_text do %>
    <%= t :genetics %> | <%= t :project_name %>
<% end %>






