<input id="popup-messages" value="<%=@values%>" type="hidden" />

<div class="diet-block mainContent">
    <input id="data-lang-diet" value="<%=I18n.locale%>" type="hidden" />
    <input id="diet_header_values" value="<%=t :diet_header_values%>" type="hidden" />
    <div class="sectionTitle dietBodyLogo dietColor">
      <%=t 'menu_diet' %>
    </div>
    <div class="contentBg" id="diet_forms">
        <div class="p10">
          <%= render "forms/element", locals: {:showButton => true,
                                               :elementName => 'diet_food',
                                               :style => 'dietStyle',
                                               :title => 'food',
                                               :img => 'food40.png',
                                               :elementId => 'dietform_1'
                                    }%>

          <%= render "forms/element", locals: {:showButton => true,
                                               :elementName => 'diet_drink',
                                               :style => 'dietStyle',
                                               :title => 'drink',
                                               :img => 'drink40.png',
                                               :elementId => 'dietform_2'
                                    }%>

          <%= render "forms/element", locals: {:showButton => true,
                                               :elementName => 'diet_quick_calories',
                                               :style => 'dietStyle',
                                               :title => 'quick_calories',
                                               :img => 'food40.png',
                                               :elementId => 'dietform_3'
                                    }%>


          <% if current_user.profile.nil? || current_user.profile.smoke %>
          <%= render "forms/element", locals: {:showButton => true,
                                               :elementName => 'diet_smoke',
                                               :style => 'dietStyle',
                                               :title => 'smoking',
                                               :img => 'smoke40.png',
                                               :elementId => 'dietform_4'
                                    }%>
          <% end %>

            <div class="clearBoth"></div>
        </div>

    </div>

    <div class="sectionTitle dietBodyLogo dietColor" style="margin-top: 40px;">
        <span class="hisTitle selected"><%=t 'history_link'%></span>
          <div class="right">
            <span id="diet-show-table"><i class="fa fa-table page-control"></i></span>
            <span class="tag kcal"><%=t 'calories'%></span>
            <span class="tag carbs"><%=t 'carbs'%></span>
            <!--<span class="tag fat"><!%=t 'fat'%></span>-->
            <!--<span class="tag prot"><!%=t 'prot'%></span>-->
          </div>
    </div>

    <table class="historyTable"  cellpadding="0" cellspacing="0">
        <tbody id="recentResourcesTable">
        </tbody>
    </table>
</div>

<div id="openModalDiet" class="modalDialog">
  <div>
    <div class="table-toolbar">
      <span id="close-diet-data" class="right page-control modalClose"><i class="fa fa-times fa-2x"></i></span>
      <span id="download-diet-data" class="right page-control"><i class="fa fa-download fa-2x"></i></span>
    </div>
    <br/>
    <br/>
    <div id="diet-data-container">
      <table id="diet-data" class="display" cellspacing="0" width="100%"></table>
    </div>
  </div>
</div>

<script>
  pages_menu();
  diet_loaded();
</script>
<% content_for :menu do %>
    <%= render "menu" %>
<% end %>
<% content_for :mobile_menu do %>
    <%= render "mobile_menu" %>
<% end %>
<% content_for :title_text do %>
    <%=t :menu_diet %> | <%= t :project_name %>
<% end %>
