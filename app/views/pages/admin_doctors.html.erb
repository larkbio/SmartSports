<input id="popup-messages" value="<%=@values%>" type="hidden" />
<% if current_user.admin %>
    <div class="adminTitle dietColor">
      <i class="fa fa-envelope-o fa-lg "></i>
      <span class="hisTitle"><%= t :invite_doctor%></span>
    </div>
    <div class="contentBg" id="inviteDoctorContainer">
      <div class="p10">
        <div class="dataFormContainer formElement dietStyle">
          <%= form_tag( root_path+"users", remote: true, class: "inviteDoctorForm" ) do %>
            <input type="text" name="user[email]" class="dataFormField" placeholder="Enter email address"/>
            <input type="hidden" name="user[doctor]" value="true"/>
            <button class="dataFormField">Invite</button>
          <% end %>
        </div>
      </div>
        <div class="clearBoth"></div>
    </div>

    <div class="adminTitle dietColor top40">
      <i class="fa fa-stethoscope fa-lg "></i>
      <span class="hisTitle selected"><%= t :all%></span></span> | <%= t :fav_link%></span></span>
      <div class="right">
        <!--<span class="tag kcal">cardiologist</span>-->
        <!--<span class="tag carbs">GP</span>-->

      </div>
    </div>

    <table class="historyTable userTable" cellpadding="0" cellspacing="0">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Email</th>
          <th>Id</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody id="recentResourcesTable">
        <%= render partial: "shared/doctor_item", collection: @doctors %>
      </tbody>
    </table>
<% end %>

<% content_for :menu do %>
    <%= render "adminmenu" %>
<% end %>

<script type="text/javascript">
  admin_common();
  admin_doctors_loaded();
</script>
