
<input id="popup-messages" value="<%=@values%>" type="hidden" />
<div class="signinHeader">
    <center>
        <%= image_tag "logo-login.png", id:"loginLogo", class: "loginLogo", alt:"Login" %>
        <br/>
        <span class="signinTitle"><%=t 'sign_in' %></span>
    </center>
</div>

<div id="loginDiv" class="loginDiv">
    <div>
        <%= form_tag sessions_path, :method => :post, :remote => true, :id => 'loginForm' do %>
        <input name="lang" value="<%=I18n.locale%>" type="hidden" />
        <input id="username_field" name="email" type="text" autocorrect="off" autocapitalize="none" class="loginField animField" placeholder="<%=t 'username' %>"/><br>
        <input id="password_field" name="password" type="password" class="loginField animField" placeholder="<%=t 'password' %>"/><br>
        <input type="submit" class="loginButton animButton" value="<%=t 'login_button' %>"/>
        <% end %>
        <div style="padding-top: 5px;color: #A5A5A5;font-size: 12px; width: 260px;">
            <a class="forgottenPwLink" href="<%= pages_reset_password_path %>"><%=t 'forgotten_password' %></a>
            <span id="langswitcher" class="langSwitcher" ><%= @lang_label %></span>
        </div>
    </div>
</div>

<% msg = "<a class=\"signupLink\" href=\""+@signup_url+"\">"+ translate('create_account_part1')+ "</a> "+ translate('create_account_part2') %>

<%= render partial: 'shared/features', locals: { msg: msg} %>

<script>
    signin_loaded()
</script>
