<div id="addBgNoteModal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%=t 'add_blood_glucose_note_title' %></h4>
      </div>
      <div class="modal-body" style="padding: 40px;">
            <div class="form-group">
              <label for="formNameInput"><%=t 'add_blood_glucose_note_form_title' %></label>
              <select class="form-control dataFormField activity_exercise_name" style="width: 100px;" type="formNameInput" id="measNote" readonly="true"></select>
              <input id="measIdToNote" type="hidden" value="" />
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%=t 'cancel'%></button>
        <button type="button" id="save-bgnote-form" class="btn btn-primary"><%=t 'save'%></button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<input id="popup-messages" value="<%=@values%>" type="hidden" />
<input id="stressList" type="hidden" value="<%=t :stressList %>">
<input id="bgTimeList" type="hidden" value="<%=t :bgTimeList %>">
<input id="meas_header_values" value="<%=t :meas_header_values%>" type="hidden" />
<input id="meas_types" value="<%=t :meas_types%>" type="hidden" />

<div class="health-block mainContent">
    <input id="data-lang-health" name="lang" value="<%=I18n.locale%>" type="hidden" />
    <div class="sectionTitle bl3 c3">
        <%=t 'health'%>
    </div>
    <div class="contentBg">
        <div class="p10">
          <%= render "forms/element", locals: {:showButton => true,
                                               :elementName => 'measurement_blood_pressure',
                                               :style => 'healthStyle',
                                               :title => 'blood_pressure',
                                               :img => 'bloodpressure40.png',
                                               :elementId => 'health_1'
                                    }%>

          <%= render "forms/element", locals: {:showButton => true,
                                               :elementName => 'measurement_blood_glucose',
                                               :style => 'healthStyle',
                                               :title => 'blood_glucose',
                                               :img => 'bloodglucose.png',
                                               :elementId => 'health_2'
                                    }%>

          <%= render "forms/element", locals: {:showButton => true,
                                               :elementName => 'measurement_weight',
                                               :style => 'healthStyle',
                                               :title => 'body_weight',
                                               :img => 'weight40.png',
                                               :elementId => 'health_3'
                                    }%>

          <%= render "forms/element", locals: {:showButton => true,
                                               :elementName => 'measurement_waist',
                                               :style => 'healthStyle',
                                               :title => 'waist_circumfence',
                                               :img => 'abdominal40.png',
                                               :elementId => 'health_4'
                                    }%>

            <div class="clearBoth"></div>
        </div>

    </div>

    <div class="sectionTitle bl3 c3" style="margin-top: 40px;">
      <span class="hisTitle selected"><%=t 'history_link'%></span>
      <span id="health-show-table" class="right"><i class="fa fa-table page-control"></i></span>
    </div>

    <table class="historyTable"  cellpadding="0" cellspacing="0">
        <tbody id="recentMeasTable">
        </tbody>
    </table>

</div>

<div id="openModal" class="modalDialog">
  <div>
    <div class="table-toolbar">
      <span id="close-health-data" class="right page-control modalClose"><i class="fa fa-times fa-2x"></i></span>
      <span id="download-health-data" class="right page-control"><i class="fa fa-download fa-2x"></i></span>
    </div>
    <br/>
    <br/>
    <div id="health-data-container">
      <table id="health-data" class="display" cellspacing="0" width="100%"></table>
    </div>
  </div>
</div>

<script>
    pages_menu();
    health_loaded();
</script>
<% content_for :menu do %>
    <%= render "menu" %>
<% end %>
<% content_for :mobile_menu do %>
    <%= render "mobile_menu" %>
<% end %>
<% content_for :title_text do %>
    <%=t :health %> | <%= t :project_name %>
<% end %>