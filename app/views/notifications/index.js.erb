$("table.notificationTable tbody.recentResourcesTable").html("");
<% if @patient %>
    $("table.notificationTable tbody.recentResourcesTable").html("<%= escape_javascript(render :partial=> 'shared/notification_patient_item', :collection=> @notifications, :locale => I18n.locale ) %>");
    <% if @notifications.size > 0 %>
        $("#notificationContainer").removeClass("hidden");
    <%end %>
    <% if @notifications.size == 0 %>
        $("#notificationContainer").addClass("hidden");
    <%end %>
<% else %>
$("table.notificationTable tbody.recentResourcesTable").html("<%= escape_javascript(render :partial=> 'shared/notification_patient_item', :collection=> @notifications, :locale => I18n.locale ) %>");
<% end %>
